<div class="login" style="width: 100%; height: 100vh; background-color: #333">
    <div class="box login-box" style="background-color: #555">
        <h2 class="title is-4" style="color: #eee; text-align: center">drook</h2>
        <%= form_with(url: '/authenticate', method: 'POST') do %>
            <% if flash[:notice] %>
                <% flash.each do |type, message| %>
                    <div class="notification is-success">
                        <%= message %> 
                    </div>
                <% end %>
            <% end %>
            <input 
                type="email" 
                name="email" 
                placeholder="digite seu email"
                class="input"
            />
            <br></br>
            <input 
                type="password" 
                name="password" 
                placeholder="digite sua senha"
                class="input"
            />
            <br></br>
            <button class="button is-fullwidth is-link" type="submit">entrar</button>
            <br></br>
            <a href="/register" class="button is-fullwidth is-small is-dark">registrar-se</a>
        <% end %>
    </div>
    
</div>
